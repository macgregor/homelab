seerr-debug: (_kube-debug "seerr" "media")
seerr-logs: (_kube-logs "seerr" "media")
seerr-stop: (_kube-stop "media" "deployment/seerr")
seerr-start: (_kube-start "media" "deployment/seerr" SEERR_REPLICAS)
seerr-restart: (_kube-restart "media" "deployment/seerr")
seerr-status: (_kube-status "seerr" "media")
